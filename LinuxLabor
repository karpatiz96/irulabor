touch file_3_6_2.txt

nano file_3_6_2.txt

touch 3_6.sh

nano 3_6.sh

#!/bin/bash
diff $1 $2 | grep "^<" | wc -l
diff $1 $2 | grep "^>" | wc -l

sudo chmod +x 3_6.sh

cat file_3_6_1.txt file_3_6_2.txt | ./3_6.sh

