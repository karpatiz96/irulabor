touch 3_7.sh

nano 3_7.sh

#!/bin/bash
awk -F "," '{if ($1 in a) {a[$1]++;} else {a[$1]=1}} END{for(item in a){print item": "a[item]}}'

sudo chmod +x 3_7.sh

cat file_3_7 | ./3_7.sh